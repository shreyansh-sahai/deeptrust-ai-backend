model UserIdentity {
  id        String   @id @default(uuid())
  userId    String
  identity  Json     @default("{}")
  created_at DateTime @default(now())
  updated_at DateTime?
  isDeleted Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isDeleted])
  @@map("user_identities")
}
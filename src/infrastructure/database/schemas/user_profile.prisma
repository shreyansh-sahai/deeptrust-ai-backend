model UserProfile {
  userId               String   @id
  professionalHeadline String?
  professionalBio      String?
  currentOrganization  String?
  state               String?
  city                String?
  country             String?
  timezone            String?
  videoIntroductionURL String?
  mobileNumber        String?
  linkedinUrl         String?
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}
